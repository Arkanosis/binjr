<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.controlsfx.control.*?>
<AnchorPane fx:id="root" focusTraversable="true" prefHeight="562.0" prefWidth="205.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="eu.fthevenet.binjr.controllers.PreferenceDialogController">
    <children>
        <Button alignment="BASELINE_LEFT" graphicTextGap="10.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#handleHideSettings" prefHeight="40.0"
                prefWidth="40.0" styleClass="square-button" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
            <font>
                <Font size="18.0"/>
            </font>
            <graphic>

                <Region styleClass="backArrow-icon"/>

                <!--<ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">-->
                <!--<image>-->
                <!--<Image url="@/images/backArrow_40.png" />-->
                <!--</image>-->
                <!--</ImageView>-->
            </graphic>
        </Button>
        <Accordion fx:id="accordionPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="50.0">
            <panes>
                <TitledPane animated="true" text="Appearance &amp; Behavior">
                    <content>
                        <ScrollPane fitToHeight="true" fitToWidth="true">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0">
                                    <children>
                                        <VBox layoutX="53.0" layoutY="-10.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                              AnchorPane.topAnchor="0.0">
                                            <children>
                                                <Label text="Theme"/>
                                                <ChoiceBox fx:id="uiThemeChoiceBox"/>
                                                <Label text="Reload last workspace on start-up" wrapText="true"/>
                                                <VBox fillWidth="false">
                                                    <children>
                                                        <ToggleSwitch fx:id="loadAtStartupCheckbox" prefWidth="1.0">
                                                            <font>
                                                                <Font size="10.0"/>
                                                            </font>
                                                        </ToggleSwitch>
                                                    </children>
                                                </VBox>
                                            </children>
                                        </VBox>
                                    </children>
                                </AnchorPane>
                            </content>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </ScrollPane>
                    </content>
                </TitledPane>
                <TitledPane fx:id="chartPrefsPane" animated="true" text="Charts Default">
                    <content>
                        <ScrollPane fitToHeight="true" fitToWidth="true">
                            <content>

                                <AnchorPane>
                                    <children>
                                        <VBox layoutX="14.0" layoutY="14.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                              AnchorPane.topAnchor="0.0">
                                            <children>
                                                <Label text="Enable animation" wrapText="true"/>
                                                <VBox fillWidth="false">
                                                    <children>
                                                        <ToggleSwitch fx:id="enableChartAnimation" alignment="CENTER" contentDisplay="GRAPHIC_ONLY" prefWidth="1.0">
                                                            <font>
                                                                <Font size="10.0"/>
                                                            </font>
                                                        </ToggleSwitch>
                                                    </children>
                                                </VBox>
                                                <Label text="Show sample symbols" wrapText="true"/>
                                                <VBox fillWidth="false">
                                                    <children>
                                                        <ToggleSwitch fx:id="showChartSymbols" prefWidth="1.0">
                                                            <font>
                                                                <Font size="10.0"/>
                                                            </font>
                                                        </ToggleSwitch>
                                                    </children>
                                                </VBox>
                                                <Label text="Use source colors" wrapText="true"/>
                                                <VBox fillWidth="false">
                                                    <children>
                                                        <ToggleSwitch fx:id="useSourceColors" prefWidth="1.0">
                                                            <font>
                                                                <Font size="10.0"/>
                                                            </font>
                                                        </ToggleSwitch>
                                                    </children>
                                                </VBox>
                                                <Label text="Show outline on area charts" wrapText="true"/>
                                                <VBox fillWidth="false">
                                                    <children>
                                                        <ToggleSwitch fx:id="showOutline" prefWidth="1.0">
                                                            <font>
                                                                <Font size="10.0"/>
                                                            </font>
                                                        </ToggleSwitch>
                                                    </children>
                                                </VBox>
                                                <Label text="Chart area  opacity" wrapText="true"/>
                                                <VBox>
                                                    <children>
                                                        <HBox alignment="CENTER_LEFT">
                                                            <children>
                                                                <Slider fx:id="graphOpacitySlider" blockIncrement="0.1" max="1.0" min="0"/>
                                                                <Label fx:id="opacityText" text="100%"/>
                                                            </children>
                                                        </HBox>
                                                    </children>
                                                </VBox>
                                                <Label text="Enable sample reduction" wrapText="true"/>
                                                <VBox fillWidth="false">
                                                    <children>
                                                        <ToggleSwitch fx:id="enableDownSampling" prefWidth="1.0" selected="true">
                                                            <font>
                                                                <Font size="10.0"/>
                                                            </font>
                                                        </ToggleSwitch>
                                                    </children>
                                                </VBox>
                                                <Label fx:id="maxSampleLabel" text="Maximum number of samples" wrapText="true"/>
                                                <TextField fx:id="downSamplingThreshold" prefHeight="25.0" prefWidth="-1.0" text="1000"/>
                                            </children>
                                        </VBox>
                                    </children>
                                </AnchorPane>
                            </content>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </ScrollPane>

                    </content>
                </TitledPane>
                <TitledPane animated="true" text="Updates">
                    <content>
                        <ScrollPane fitToHeight="true" fitToWidth="true">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0">
                                    <children>
                                        <VBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                            <children>
                                                <Label text="Check for updates on start-up" wrapText="true"/>
                                                <VBox fillWidth="false">
                                                    <children>
                                                        <ToggleSwitch fx:id="updateCheckBox" prefWidth="1.0"/>
                                                    </children>
                                                </VBox>
                                                <Label text="Check for updates now" wrapText="true"/>
                                                <Button alignment="CENTER" mnemonicParsing="false" onAction="#handleCheckForUpdate" styleClass="border-button" text="Check now"/>
                                                <TextFlow fx:id="updateFlow"/>
                                            </children>
                                        </VBox>
                                    </children>
                                </AnchorPane>
                            </content>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </ScrollPane>
                    </content>
                </TitledPane>
            </panes>
        </Accordion>
        <Label layoutX="100.0" layoutY="12.0" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="40.0" styleClass="pane-title" text="Settings" AnchorPane.leftAnchor="40.0"
               AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <font>
                <Font size="14.0"/>
            </font>
            <padding>
                <Insets left="5.0"/>
            </padding>
        </Label>
    </children>
</AnchorPane>
