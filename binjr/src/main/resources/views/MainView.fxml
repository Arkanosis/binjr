<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="root" prefHeight="725.0" prefWidth="1092.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eu.fthevenet.binjr.controllers.MainViewController">
    <children>
        <MenuBar VBox.vgrow="NEVER">
            <menus>
                <Menu fx:id="fileMenu" mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem disable="true" mnemonicParsing="false" onAction="#handleNewTabAction" text="New Workspace" />
                        <MenuItem disable="true" mnemonicParsing="false" text="Open…" />
                        <Menu disable="true" mnemonicParsing="false" text="Open Recent" />
                        <!--<SeparatorMenuItem mnemonicParsing="false" />-->
                        <!--<MenuItem mnemonicParsing="false" text="Close" />-->
                        <!--<MenuItem mnemonicParsing="false" text="Save" />-->
                        <!--<MenuItem mnemonicParsing="false" text="Save As…" />-->
                        <!--<MenuItem mnemonicParsing="false" text="Revert" />-->
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem accelerator="Alt+P" mnemonicParsing="false" onAction="#handlePreferencesAction" text="Preferences…" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" onAction="#handleQuitAction" text="Quit" />
                    </items>
                </Menu>
                <Menu fx:id="sourceMenu" mnemonicParsing="false" text="Sources">
                    <items>
                        <Menu fx:id="addSourceMenu" mnemonicParsing="false" text="New source...">
                            <MenuItem mnemonicParsing="false" onAction="#handleAddJRDSSource" text="JRDS">
                        <accelerator>
                           <KeyCodeCombination alt="DOWN" code="J" control="UP" meta="UP" shift="UP" shortcut="UP" />
                        </accelerator></MenuItem>
                        </Menu>
                    </items>
                </Menu>
                <Menu fx:id="viewMenu" mnemonicParsing="false" text="Worksheets">
                    <items>
                  <MenuItem mnemonicParsing="false" text="New Worksheet">
                     <accelerator>
                        <KeyCodeCombination alt="DOWN" code="N" control="UP" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
                  <SeparatorMenuItem mnemonicParsing="false" />
                        <CheckMenuItem fx:id="showXmarkerMenuItem" mnemonicParsing="false" text="Lock vertical crosshair marker" />
                        <CheckMenuItem fx:id="showYmarkerMenuItem" mnemonicParsing="false" text="Lock horizontal crosshair marker" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem fx:id="editRefresh" accelerator="F5" mnemonicParsing="false" onAction="#handleRefreshAction" text="Refresh" />
                    </items>
                </Menu>
                <Menu fx:id="helpMenu" mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleAboutAction" text="About binjr" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <SplitPane dividerPositions="0.35" focusTraversable="true" nodeOrientation="LEFT_TO_RIGHT" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
            <items>
                <AnchorPane prefWidth="335.0" SplitPane.resizableWithParent="false">
                    <children>
                  <TabPane fx:id="sourcesTabPane" prefHeight="200.0" prefWidth="200.0" side="LEFT" tabClosingPolicy="SELECTED_TAB" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <tabs>
                    </tabs>
                  </TabPane>
                    </children>
                </AnchorPane>
                <TabPane fx:id="seriesTabPane" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="SELECTED_TAB">
                    <tabs>
                    </tabs>
                </TabPane>
            </items>
        </SplitPane>
        <HBox id="HBox" alignment="CENTER_LEFT" prefWidth="900.0" spacing="5.0" VBox.vgrow="NEVER">
            <children>
                <Pane HBox.hgrow="ALWAYS">
                    <children>
                        <Label layoutY="1.0" maxHeight="1.7976931348623157E308" maxWidth="-1.0" prefHeight="18.0" prefWidth="34.0">
                            <font>
                                <Font size="11.0" fx:id="x3" />
                            </font>
                        </Label>
                    </children>
                </Pane>
            </children>
            <padding>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
            </padding>
        </HBox>
    </children>
</VBox>
